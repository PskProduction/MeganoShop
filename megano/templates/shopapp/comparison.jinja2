{% extends 'base.jinja2' %}

{% block content %}

    <div class="Middle">
        <div class="wrap">
            <div class="Product">
                <div class="ProductCard">
                    {% if compare_list|length > 1 %}
                        {% for product in compared_products %}
                            <div class="ProductCard-desc">
                                <div class="ProductCard-header">
                                    <h2 class="ProductCard-title">{{ product.name }}</h2>
                                    <div class="ProductCard-look">
                                        <div class="ProductCard-photo">
                                            <img src="{{ product.image.url }}" alt="{{ product.image }} image"/>
                                        </div>
                                    </div>
                                    <div class="Tabs Tabs_default">
                                        <div class="Tabs-wrap">
                                            <div class="Tabs-block" id="description">
                                                <div class="table">
                                                    <table>
                                                        <tr>
                                                            <th class="hed">Характеристика</th>
                                                            <th class="hed">Значение</th>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Общие параметры</b></td>
                                                            <td></td>
                                                        </tr>
                                                        {% for feature in product.features.all() %}
                                                            <tr>
                                                                <td>{{ feature.feature.name }}</td>
                                                                <td>{{ feature.value.value }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="ProductCard-info">
                                    <div class="ProductCard-cost">
                                        <div class="ProductCard-price">
                                            $55.00
                                        </div>
                                    </div>
                                </div>
                                <div class="ProductCard-cart">
                                    <div class="ProductCard-cartElement">
                                        <a class="btn btn_primary" href="cart.html">
                                            <img class="btn-icon" src="{{ static('assets/img/icons/card/cart_white.svg') }}" alt="cart_white.svg"/>
                                            <span class="btn-content">Добавить в корзину</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="ProductCard-cart">
                                    <div class="ProductCard-cartElement">
                                        <a class="btn btn_primary" href="{{ url('shopapp:compare_remove', product.id) }}">
                                            <img class="btn-icon" src="{{ static('assets/img/icons/card/remove.svg') }}" alt="remove.svg"/>
                                            <span class="btn-content">Убрать из сравнения</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <h2 style="margin-right: 10%">Недостаточно данных для сравнения.</h2>
                        {% if compare_list|length == 1 %}
                            <div class="ProductCard-cartElement">
                                <a class="btn btn_primary" href="{{ url('shopapp:compare_clear') }}">
                                    <img class="btn-icon" src="{{ static('assets/img/icons/card/remove.svg') }}" alt="remove.svg"/>
                                    <span class="btn-content">Очистить список</span>
                                </a>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% extends 'base.jinja2' %}

{% block title %}
    Catalog
{% endblock %}

{% block header %}
    {% include 'header.jinja2' %}
{% endblock %}

{% block content %}
<div class="Middle Middle_top">
    <div class="Section Section_column Section_columnLeft">
        <div class="wrap">
            <div class="Section-column">
                <div class="Section-columnSection">
                    <header class="Section-header">
                        <strong class="Section-title">Фильтр
                        </strong>
                    </header>
                    <div class="Section-columnContent">
                        <form class="form" action="" method="post">
                            {% csrf_token %}
                            <div class="form-group">
                                <div class="range Section-columnRange">
                                    <input class="range-line" id="price" name="price" value="{{ filter_form.price }}" type="text" data-type="double" data-min="7" data-max="50" data-from="7" data-to="27" />
                                    <div class="range-price">Цена:&#32;
                                        <div class="rangePrice">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input class="form-input form-input_full" id="title" name="title" value="{{ filter_form.title }}" type="text" placeholder="Название" />
                            </div>
                            <div class="form-group">
                                <!-- - var options = setOptions(items, ['value', 'selected', 'disabled']);-->
                            </div>
                            <div class="form-group">
                                <label class="toggle">
                                    <input type="checkbox" name="available" value="{{ filter_form.available }}" /><span class="toggle-box"></span><span class="toggle-text">Только товары в наличии</span>
                                </label>
                            </div>
                            <!-- <div class="form-group">
                                <label class="toggle">
                                    <input type="checkbox" name="free_delivery" /><span class="toggle-box"></span><span class="toggle-text">С бесплатной доставкой</span>
                                </label>
                            </div> -->
                            <div class="form-group">
                                <!-- <div class="buttons"><a class="btn btn_square btn_dark btn_narrow" href="#">Фильтр</a> -->
                                <div class="buttons"><button type="submit" class="btn btn_square btn_dark btn_narrow">Фильтр</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="Section-columnSection">
                    <header class="Section-header">
                        <strong class="Section-title">Популярные тэги
                        </strong>
                    </header>
                    <div class="Section-columnContent">
                        {% for tag in tags %}
                        <div class="buttons">
                            <a class="btn btn_default btn_sm" href="#">tag.name</a>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="Section-content">
                <div class="Sort">
                    <div class="Sort-title">Сортировать по:
                    </div>
                    <div class="Sort-variants">
                        <a class="Sort-sortBy Sort-sortBy_dec" href="?sort=popularity">Популярности</a>
                        <a class="Sort-sortBy" href="?sort=price">Цене</a>
                        <a class="Sort-sortBy" href="?sort=reviews">Отзывам</a>
                        <a class="Sort-sortBy Sort-sortBy_inc" href="?sort=novelty">Новизне</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="Cards">
        {% for product in products %}
          <div class="Card">
            {% if product.image %}
              <a class="Card-picture" href="#"> {# ссылка на product_detail #}
                  <img src="{{ static(product.image) }}" alt="{{ product.name }}">
              </a>
            {% else %}
              <a class="Card-picture" href="#"> {# ссылка на product_detail #}
                  <h2>Изображение отсуствует</h2>
              </a>
          <div class="Card-content">
            <strong class="Card-title">
                <a href="#">{{ product.name }}</a> {# ссылка на product_detail #}
            </strong>
            <div class="Card-description">
                <div class="Card-cost">
                    <span class="Card-price">{{ product.price }}</span>
                </div>
            <div class="Card-category">
                <p>{{ product.category}}</p>
                <p>{{ product.sellers }}</p> {# кол-во продавцов #}
                <p><a href="#">Отзывов:{{ product.reviews }}</a></p> {# кол-во отзывов #}
            </div>
            <div class="Card-hover">
                <a class="Card-btn" href="#"> {# добавить в корзину #}
                    <img src="{{ static(assets/img/icons/card/cart.svg) }}" alt="cart.svg"/>
                </a>
                 <a class="Card-btn" href="#"> {# добавить в список сравнения #}
                    <img src="#" alt="#"/>
                </a>
            </div>
            </div>
          </div>
          </div>
        {% empty %}
            <h4>Товар отсутствует!</h4>
        {% endfor %}
    </div>
    <div class="Pagination">
        <div class="Pagination-ins">
            {% if products.has_previous %}
                <a class="Pagination-element Pagination-element_prev" href="?page={{ products.previous_page_number }}"><img src="{{ static(assets/img/icons/prevPagination.svg) }}" alt="prevPagination.svg" /></a>
                <a class="Pagination-element" href="?page={{ products.previous_page_number }}"><span class="Pagination-text">{{ products.previous_page_number }}</span></a>
            {% endif %}
                <a class="Pagination-element Pagination-element_current" href="?page={{ products.number }}"><span class="Pagination-text">{{ products.number }}</span></a>
            {% if products.has_next %}
                <!-- <a class="Pagination-element" href="#"><span class="Pagination-text">2</span></a>
                <a class="Pagination-element" href="#"><span class="Pagination-text">3</span></a> -->
                <a class="Pagination-element" href="?page={{ products.next_page_number }}"><span class="Pagination-text">{{ products.next_page_number }}</span></a>
                <a class="Pagination-element Pagination-element_prev" href="?page={{ products.next_page_number }}"><img src="{{ static(assets/img/icons/nextPagination.svg) }}" alt="nextPagination.svg" /></a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
    {% include 'footer.jinja2' %}
{% endblock %}
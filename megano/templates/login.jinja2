{% extends 'base.jinja2' %}

{% block header_down %}
    {% include 'header_down_mini.jinja2' %}
{% endblock %}

{% block content %}
<div class="wrap">
            <div class="wrapper">
                <div class="header">
                    <h3 class="sign-in">Вход</h3>
                </div>
                <div class="clear"></div>
                    <form action="#" method="post">
                    {% csrf_token %}
                    <div>
                        {% if error_message %}
                            <span class="error-text" style="color: rgb(255, 0, 0);">{{ error_message }}</span>
                        {% endif %}
                        <input class="user-input" type="text" name="email" id="email" placeholder="E-mail">
                    </div>
                    <div>
                        <input type="password" name="password" id="name" placeholder="*********">
                    </div>
                    <div>
                        <input type="submit" value="Войти">
                    </div>
                    <a class="forgot-label" href="{{ url('password_reset_view') }}">Забыли пароль?</a>
                    <a class="registr" href="{{ url('registration_view') }}">Регистрация</a>
                </form>
            </div>
        </div>
{% endblock %}

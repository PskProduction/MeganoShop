{% extends 'base.jinja2' %}

{% block content %}
<div class="row Header-rowMain">
    <div class="row-block Header-logo">
        <a class="logo" href="index.html">
            <img class="logo-image" src="{{ static('assets/img/logo.png') }}" alt="logo.png">
        </a>
    </div>
</div>
<div class="wrapper">
                <div class="header">
                    <h3 class="sign-in">Восстановление пароля (1/2)</h3>
                    <h5>Для восстановления пароля введите адрес электронной почты, на которую зарегистрирована учетная запись</h5>
                </div>
                <form action="#" method="post">
                    <div>
                        {% if form.email.errors or error_function %}
                        <span class="error-text" style="color: rgb(255, 0, 0);">{{ form.email.errors ~ error_function }}</span>
                        {% endif %}
                        <input class="user-input" type="email" name="email" id="email" placeholder="Имя" {% if form.email.errors or error_function %}style="border: 1px solid rgb(255, 0, 0);"{% endif %} value="{{ form.email.value()|default_if_none("") }}">
                    </div>
                    <div>
                        <input type="submit" value="Получить проверочный код">
                    </div>
                    <a class="registr" href="/login/">
                        Вход
                    </a>
                    {% csrf_token %}
                </form>
            </div>
{% endblock %}

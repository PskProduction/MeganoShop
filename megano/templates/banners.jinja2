<div class="Header-slider">
    <div class="Slider Slider_main">
        <div class="Slider-box">
            {% for product in random_banners %}
                <div class="Slider-item">
                    <div class="Slider-content">
                        <div class="row">
                            <div class="row-block">
                                <strong class="Slider-title">{{ product.name }}
                                </strong>
                                <div class="Slider-text">{{ product.description }}
                                </div>
                                <div class="Slider-footer"><a class="btn btn_primary"
                                                              href="{{ url('shopapp:product_detail', product_slug=product.slug) }}">Перейти</a>
                                </div>
                            </div>
                            <div class="row-block">
                                <div class="Slider-img">
                                    <img src="{{ product.image.url }}" alt="{{ product.name }}"
                                         style="max-height: 400px; max-width: 400px;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="Slider-navigateWrap">
            <div class="Slider-navigate">
            </div>
        </div>
    </div>
</div>
